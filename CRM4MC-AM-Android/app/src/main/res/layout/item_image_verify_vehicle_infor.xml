<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp">


    <ImageView
        android:id="@+id/img_image_vehicle"
        android:layout_width="@dimen/padding_70"
        android:layout_height="@dimen/padding_70"
        android:src="@drawable/ic_image_fake"
        android:background="@drawable/border_area_text"
        android:padding="10dp"/>

    <ImageButton
        android:id="@+id/btn_remove_image_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_remove_fake" />
</RelativeLayout>