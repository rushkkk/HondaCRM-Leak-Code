<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_10"
            card_view:cardCornerRadius="@dimen/margin_8"
            card_view:cardElevation="@dimen/margin_8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_14"
                android:paddingRight="@dimen/padding_14"
                android:paddingBottom="@dimen/margin_15">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_22"
                    android:paddingBottom="@dimen/margin_7">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_logo_honda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="@dimen/margin_8"
                            android:layout_marginBottom="@dimen/margin_7"
                            android:contentDescription="@string/description_image"
                            android:src="@drawable/ic_logo_honda" />

                        <TextView
                            android:id="@+id/tv_dealer_name_step4"
                            style="@style/Small3BlackBoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/img_logo_honda"
                            android:drawableStart="@drawable/ic_logo_honda"
                            android:text="Mỹ Đình" />


                        <TextView
                            android:id="@+id/tv_dealer_phone_number_step4"
                            style="@style/MicroBlackText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawablePadding="@dimen/margin_3"
                            android:gravity="right"
                            android:text="0388230926" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/MicroBlack40Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_logo_honda"
                            android:layout_marginStart="@dimen/margin_3"
                            android:text="@string/label_dia_chi" />

                        <TextView
                            android:id="@+id/tv_dealer_address_step4"
                            style="@style/MicroBlack40Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_logo_honda"
                            android:layout_marginStart="@dimen/margin_3"
                            android:text=" 2 Lê Đức Thọ, Mai Dịch" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_label_work_time"
                            style="@style/MicroBlackText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_dealer_address"
                            android:layout_marginStart="@dimen/margin_3"
                            android:layout_marginEnd="@dimen/margin_3"
                            android:text="@string/lb_working_time" />

                        <TextView
                            android:id="@+id/tv_dealer_work_time"
                            style="@style/MicroBlackText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_dealer_address"
                            android:layout_toEndOf="@+id/tv_label_work_time"
                            android:text="8:00-17:00" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_dealer_distance"
                        style="@style/SmallBlackBoldText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_label_work_time"
                        android:layout_marginStart="@dimen/margin_3"
                        android:layout_marginTop="@dimen/margin_6"
                        android:text="0.8km" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.25dp"
                        android:layout_below="@+id/tv_dealer_distance"
                        android:layout_marginTop="@dimen/margin_11"
                        android:background="@color/colorGray60" />

                </LinearLayout>

                <TextView
                    style="@style/SmallBlackText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/lb_selected_time" />

                <TextView
                    android:id="@+id/txt_select_time"
                    style="@style/Micro2Black50Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    tools:text="2019/05/10 10:00 - 11:00 AM" />

                <TextView
                    style="@style/SmallBlackText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/lb_selecte_type_service" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/bg_spiner_booking_service"
                    android:paddingStart="@dimen/padding_5">

                    <Spinner
                        android:id="@+id/spn_selecte_type_service"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"

                        />
                </FrameLayout>
                <TextView
                    android:id="@+id/txtErrTypeService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_size_micro" />

                <TextView
                    style="@style/SmallBlackText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"

                    android:text="@string/lb_Your_Additional_Information" />

                <EditText
                    android:id="@+id/txt_your_additianal"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/bg_spiner_booking_service"
                    android:gravity="top"
                    android:hint="@string/lb_my_car_has"
                    android:inputType="text|textMultiLine"
                    android:padding="@dimen/margin_5"
                    android:textSize="@dimen/font_size_micro_2" />

                <TextView
                    android:id="@+id/txtErrorYourAdditional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_size_micro"
                 />

                <TextView
                    style="@style/SmallBlackText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/lb_expected_finishing" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_expec_day"
                            style="@style/Micro2BlackText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/margin_5"
                            android:background="@drawable/bg_spiner_booking_service"
                            android:drawableEnd="@mipmap/ic_profile_date_time"
                            android:padding="@dimen/margin_5" />

                        <TextView
                            android:id="@+id/txtErrorDateExpec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_5"
                            android:textColor="@color/red"
                            android:textSize="@dimen/font_size_micro"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <AutoCompleteTextView
                            android:id="@+id/acExpectTime"
                            style="@style/Micro2BlackText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_spiner_booking_service"
                            android:cursorVisible="false"
                            android:dropDownHeight="wrap_content"
                            android:drawableEnd="@drawable/ic_oclock_time"
                            android:focusable="false"
                            android:maxLines="1"
                            android:padding="4dp"/>

                        <TextView
                            android:id="@+id/txtErrorTimeExpec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:textColor="@color/red"
                            android:textSize="@dimen/font_size_micro"
                           />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/btnNextStep5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_20"
            android:contentDescription="@string/description_image"
            android:src="@drawable/ic_next_stepview" />
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>