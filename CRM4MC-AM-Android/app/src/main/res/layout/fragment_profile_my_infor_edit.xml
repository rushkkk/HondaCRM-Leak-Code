                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_7"
                android:layout_marginBottom="@dimen/margin_7"
                android:background="@color/colorBlack50" />

            <TextView
                style="@style/MicroRedText"
                android:visibility="invisible" />

