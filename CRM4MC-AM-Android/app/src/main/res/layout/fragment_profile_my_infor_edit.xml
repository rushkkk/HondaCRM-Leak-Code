                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_7"
                android:layout_marginBottom="@dimen/margin_7"
                android:background="@color/colorBlack50" />

            <TextView
                style="@style/MicroRedText"
                android:visibility="invisible" />

            <TextView
                style="@style/SmallBlack28Text"
                android:text="@string/lb_profile_email" />

            <EditText
                android:id="@+id/edit_profile_mail"
                style="@style/SmallBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:autofillHints=""
                android:background="@null"
                android:inputType="textEmailAddress"
                tools:text="@string/email" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_7"
                android:layout_marginBottom="@dimen/margin_7"
                android:background="@color/colorBlack50" />

            <TextView
                android:id="@+id/lb_Invalid_Email"
                style="@style/MicroRedText"
                android:text="@string/Invalid_email_address"
                android:visibility="invisible" />

            <TextView
                style="@style/SmallBlack28Text"
                android:text="@string/lb_profile_job" />

            <EditText
                android:id="@+id/edit_profile_job"
                style="@style/SmallBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:background="@null"
                android:ellipsize="end"
                android:inputType="textEmailAddress"
                tools:text="@string/job" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_7"
                android:layout_marginBottom="@dimen/margin_7"
                android:background="@color/colorBlack50" />

            <TextView
                style="@style/MicroRedText"
                android:visibility="invisible" />

            <TextView
                style="@style/SmallBlack28Text"
                android:text="@string/lb_profile_id_number" />

            <EditText
                android:id="@+id/edit_profile_idnumber"
                style="@style/SmallBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:background="@null"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRETUVWXYZ0123456789"
                android:ellipsize="end"
                android:inputType="textNoSuggestions"
                android:maxLength="20"
                tools:text="@string/id_number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_7"
                android:layout_marginBottom="@dimen/margin_7"
                android:background="@color/colorBlack50" />

            <TextView
                android:id="@+id/lb_Invalid_Id_number"
                style="@style/MicroRedText"
                android:text="@string/Invalid_IdNumber"
                android:visibility="invisible" />


            <TextView
                style="@style/SmallBlack28Text"
                android:text="@string/lb_profile_address" />

            <EditText
                android:id="@+id/edit_profile_address"
                style="@style/SmallBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:background="@null"
                android:inputType="textEmailAddress"
                tools:text="@string/address" />

            <LinearLayout
