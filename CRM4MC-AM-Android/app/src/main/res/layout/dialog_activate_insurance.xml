<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_26"
    android:background="@drawable/border_dialog"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_20"
        android:gravity="center"
        android:text="@string/tv_activate_insurance_dialog"
        style="@style/MediumBlackText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_40"
        android:paddingEnd="@dimen/padding_40"
        android:weightSum="2">

        <TextView
            android:id="@+id/btn_cancel"
            style="@style/MediumWhileBoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_17"
            android:layout_weight="1"
            android:background="@drawable/button_gray_background"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:text="@string/btn_cancel" />

        <TextView
            android:id="@+id/btn_ok"
            style="@style/MediumWhileBoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:text="@string/btn_agree_dialog"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>