<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/line_event_home"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/img_events_home"
        android:layout_width="160dp"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_height="90dp"
        android:elevation="10dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/image_profile_tabevent"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/honda" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_toRightOf="@id/img_events_home"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitleEventList"
            style="@style/SmallBlackTextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy anniversary" />

        <TextView
            android:id="@+id/txtContentEventList"
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginTop="@dimen/margin_5"
            android:text="Before you wonder, it’s a significantly updated..." />

        <TextView
            android:id="@+id/txtTimeEventList"
            android:layout_marginTop="@dimen/margin_10"
            style="@style/NanoBlack50Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_alam_profile"
            android:drawablePadding="@dimen/margin_3"
            android:text="6/7/2019- 3/8/2019" />

        <TextView
            android:id="@+id/txtAddressEventList"
            android:layout_marginTop="@dimen/margin_3"
            style="@style/NanoBlack50Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_location_profile"
            android:drawablePadding="@dimen/margin_3"
            android:text="Số Thái Hà, Đống Đa, Hà Nội " />
    </LinearLayout>


</RelativeLayout>