<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.events.DetailEventActivity">
    <include
        android:id="@+id/toolbar_event"
        layout="@layout/tool_bar_back" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_30"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_25"
                android:layout_marginEnd="@dimen/margin_25"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/img_detail_event_top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_event_detail" />
                </android.support.v7.widget.CardView>


                <TextView
                    style="@style/XLargeBlackBoldText"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_height="wrap_content"
                    android:text="@string/lb_title_event_detail" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/icon_profile_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginEnd="@dimen/padding_5"
                        android:src="@drawable/ic_alam_profile" />

                    <TextView
                        android:id="@+id/label_profile_datestart"
                        style="@style/NanoBlack50Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/5/2019" />

                    <TextView
                        android:id="@+id/label_profile_space"
                        style="@style/NanoBlack50Text"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:paddingStart="@dimen/margin_5"
                        android:paddingEnd="@dimen/margin_5"
                        android:text="-" />

                    <TextView
                        android:id="@+id/label_profile_dateEnd"
                        style="@style/NanoBlack50Text"
                        android:text="3/5/2019" />

                    <ImageView
                        android:id="@+id/icon_profile_maker"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:src="@drawable/ic_location_profile" />

                    <TextView
                        android:id="@+id/label_profile_address"
                        style="@style/Nano2Black50Text"
                        android:layout_gravity="right"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_weight="13"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="Số Thái Hà, Đống Đa, Hà Nội" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_19"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/btn_will"
                        android:lines="1"
                        style="@style/SmallWhiteText"
                        android:background="@drawable/button_gray_background_event_detail"
                        android:gravity="center"
                        android:text="@string/btn_will" />
                    <TextView
                        android:id="@+id/btn_concem"
                        android:lines="1"
                        android:layout_marginStart="@dimen/margin_20"
                        style="@style/SmallWhiteText"
                        android:background="@drawable/button_gray_background_event_detail"
                        android:gravity="center"
                        android:text="@string/btn_concem" />
                    <TextView
                        android:id="@+id/btn_dontcare"
                        android:lines="1"
                        style="@style/SmallWhiteText"
                        android:layout_marginStart="@dimen/margin_20"
                        android:background="@drawable/button_gray_background_event_detail"
                        android:gravity="center"
                        android:text="@string/btn_dontcare" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SmallBlackText"
                    android:layout_marginTop="@dimen/margin_19"
                    android:text="@string/txt_event_detail_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Small3BlackText"
                    android:layout_marginTop="@dimen/margin_4"
                    android:text="@string/lb_event_Teaser"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp">

                    <VideoView
                        android:id="@+id/videoView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>