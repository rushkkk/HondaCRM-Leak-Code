<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_14"
                android:layout_marginRight="@dimen/margin_14">

                <TextView
                    android:id="@+id/txt_dealer_name"
                    style="@style/Small4BlackText" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_100"
                    android:src="@drawable/ic_arrow_map"
                    android:contentDescription="@string/description_image" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/margin_14"
                android:layout_marginBottom="@dimen/margin_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_map_location" />

                <TextView
                    android:id="@+id/txt_dealer_address"
                    style="@style/MicroBlackText"
                    android:layout_marginStart="@dimen/margin_8"
                 />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
   <ImageView
       android:layout_marginTop="-6dp"
       android:layout_gravity="center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/sort_down"/>

</LinearLayout>