<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="111dp"
    android:layout_marginTop="14dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18.5dp"
        android:layout_marginRight="17.5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_image"
                android:layout_width="83dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/rl_image"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_vehicle"
                    style="@style/MediumBlackText"
                    android:text="Honda SH 300cc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.7dp"
                    android:layout_marginRight="12.3dp">

                    <TextView
                        android:id="@+id/tv_license_plates"
                        style="@style/SmallBlackText"
                        android:text="29B1-023.45" />

                    <TextView
                        style="@style/SmallGrayCntText"
                        android:layout_toLeftOf="@+id/tv_vin"
                        android:text="@string/vin" />

                    <TextView
                        android:id="@+id/tv_vin"
                        style="@style/SmallBlackText"
                        android:layout_alignParentRight="true"
                        android:text="29B1-023.45" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_connected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12.8dp"
                android:layout_marginRight="12.8dp"
                app:srcCompat="@drawable/ic_connected" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>