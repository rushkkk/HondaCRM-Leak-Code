<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:paddingLeft="@dimen/padding_20"
    android:paddingRight="@dimen/padding_20"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_30"
        android:gravity="center"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txtIntroduce"
        style="@style/MediumBlackBoldText"
        android:layout_gravity="center"
        android:text="@string/add_vehicle_manual_tittle"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/ic_add_vin_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        app:srcCompat="@drawable/ic_question" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_vin_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@drawable/rounded_edit_text"
        android:inputType="text" />

    <TextView
        android:id="@+id/txt_error_add_manual"
        style="@style/SmallRedText"
        android:visibility="invisible"
        android:layout_marginBottom="@dimen/margin_20"
        android:text="@string/VIN_incorrect"/>

    <TextView
        android:id="@+id/txt_submit_vin_manual"
        style="@style/MediumWhileBoldText"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="@string/submit"/>
</LinearLayout>