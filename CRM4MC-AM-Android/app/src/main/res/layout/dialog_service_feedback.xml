<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_10"
    android:paddingEnd="@dimen/margin_10">

    <TextView
        android:id="@+id/txt_title_recall_feedback"
        style="@style/Small2BlackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_20"
        android:text="@string/service_feedback"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@drawable/bg_item_in_recall"
        android:paddingBottom="@dimen/padding_10">

        <TextView
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_vehicle" />

        <TextView
            android:id="@+id/txt_vehicle_feedback"
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Xế cưng (CRV 2019)" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/bg_item_in_recall"
        android:paddingBottom="@dimen/padding_10">

        <TextView
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_service" />

        <TextView
            android:id="@+id/txt_service_feedback"
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Sửa chữa thông thường" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/bg_item_in_recall"
        android:paddingBottom="@dimen/padding_10">

        <TextView
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_booking_time" />

        <TextView
            android:id="@+id/txt_time_booking_feedback"
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="2019/05/24 10:00 - 11:00" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/bg_item_in_recall"
        android:paddingBottom="@dimen/padding_10">

        <TextView
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_address_booking" />

        <TextView
            android:id="@+id/txt_address_booking_feedback"
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="2 Lê Đức Thọ, Mai Dịch" />
    </FrameLayout>
    <RatingBar
        android:id="@+id/ratingBar_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:theme="@style/RatingBar"
        android:layout_marginTop="@dimen/margin_10"
        />
    <TextView
        style="@style/SmallBlackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_this_service" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_15">

        <TextView
            android:id="@+id/btn_cancel_service_feedback"
            style="@style/Micro2WhiteBoldText"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/padding_10"
            android:background="@drawable/button_gray"
            android:paddingVertical="@dimen/padding_5"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_20"
            android:text="@string/btn_cancel"
            android:layout_marginEnd="@dimen/margin_10"/>

        <TextView
            android:id="@+id/btn_submit_service_feedback"
            style="@style/Micro2WhiteBoldText"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/padding_10"
            android:background="@drawable/red_button"
            android:paddingVertical="@dimen/padding_5"
            android:textAllCaps="true"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_20"
            android:text="@string/submit" />
    </LinearLayout>

</LinearLayout>