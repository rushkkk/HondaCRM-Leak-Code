<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_19"
        android:paddingRight="@dimen/padding_19">

        <TextView
            style="@style/Small14BlackBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_28"
            android:text="Honda My Dinh" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_8"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_test" />

            <TextView
                style="@style/SmallBlackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:text="No 02, Xuan Thuy Street, Cau Giay district,Ha Noi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_6"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_test" />

            <TextView
                style="@style/SmallBlackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:text="0938302468" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_6"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_oclock_test" />

            <TextView
                style="@style/SmallBlackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:text="Working Time: 8:00 - 17:00" />

        </LinearLayout>

    </LinearLayout>

   <View
         android:layout_width="match_parent"
        android:id="@+id/view_border_1"
        android:layout_height="0.25dp"
       android:layout_marginTop="@dimen/margin_18"
        android:layout_below="@+id/view_spinner"
        android:layout_marginStart="@dimen/margin_18"
        android:layout_marginEnd="@dimen/margin_18"
        android:background="@color/grayBorder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/view_border_1"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginStart="@dimen/margin_18"
        android:layout_marginEnd="@dimen/margin_18"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MicroBlackText"
            android:text="@string/lb_Vehicle_Test_Drive"/>


        <TextView
            style="@style/Small14BlackBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Honda Cvici" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_below="@+id/view_spinner"
            android:background="@color/grayBorder"/>

        <TextView
            style="@style/SmallBlackText"
            android:layout_marginTop="@dimen/margin_16"
            android:text="@string/lb_name_step_2" />
        <TextView
            style="@style/SmallBlack56Text"
            android:layout_marginTop="@dimen/margin_4"
            android:text="Nguyen van A" />
        <TextView
            style="@style/SmallBlackText"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/lb_age_step_2" />
        <TextView
            style="@style/SmallBlack56Text"
            android:layout_marginTop="@dimen/margin_4"
            android:text="30" />
        <TextView
            style="@style/SmallBlackText"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/lb_gender_step_2" />
        <TextView
            style="@style/SmallBlack56Text"
            android:layout_marginTop="@dimen/margin_4"
            android:text="Male" />
        <TextView
            style="@style/SmallBlackText"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/lb_phone_step_2" />
        <TextView
            style="@style/SmallBlack56Text"
            android:layout_marginTop="@dimen/margin_4"
            android:text="+8496741765" />
        <TextView
            style="@style/SmallBlackText"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/lb_address" />
        <TextView
            style="@style/SmallBlack56Text"
            android:layout_marginTop="@dimen/margin_4"
            android:text="No 02, Le Duc Tho Street, Cau Giay district,Ha Noi" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="31dp"
            android:paddingStart="@dimen/padding_60"
            android:paddingEnd="@dimen/padding_60"
            android:weightSum="2">

            <TextView
                android:id="@+id/btn_cancel"
                style="@style/Small14WhiteText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_11"
                android:layout_weight="1"
                android:background="@drawable/button_gray_background"
                android:gravity="center"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:text="@string/btn_cancel_low" />

            <TextView
                android:id="@+id/btn_ok"
                style="@style/Small14BlackBoldText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:text="@string/submit"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/margin_25">
        <ImageView
            android:id="@+id/btnBackStep5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/margin_19"
            android:contentDescription="@string/description_image"
            android:src="@drawable/ic_next_test_drive" />
        <TextView
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_step_2" />
    </FrameLayout>
</RelativeLayout>


