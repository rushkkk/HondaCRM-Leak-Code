<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.activities.login.ui.WelcomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/indicator"
        android:layout_marginBottom="@dimen/margin_30" />

    <me.relex.circleindicator.CircleIndicator
        android:id='@+id/indicator'
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_above="@+id/btnNextCircle"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/margin_37"
        app:ci_drawable="@drawable/circleindicator_round" />

    <Button
        android:id="@+id/btnNextCircle"
        style="@style/Medium3WhiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtSkip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_19"
        android:background="@drawable/selector_red_button"
        android:text="@string/lb_welcome_next"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txtSkip"
        style="@style/Medium3BlackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/label_skip_tutorial" />
</RelativeLayout>