<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/line9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="19dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="19dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="11"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="@dimen/margin_3"
        android:paddingRight="5dp">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_weight="5.5"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/image_profile_tabevent"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/honda"
                />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/image_profile_tabevent"
            android:layout_weight="5.5">

            <TextView
                android:id="@+id/label_profile_title"
                style="@style/SmallBlackBoldText"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="Happy anniversary" />


            <TextView
                android:id="@+id/label_profile_content"
                style="@style/SmallBlackText"
                android:layout_width="match_parent"
                android:layout_below="@+id/label_profile_title"
                android:ellipsize="end"
                android:lines="2"
                android:text="The Power of Dreams  manifests itself in future in the world on dream" />

            <LinearLayout
                android:id="@+id/item_clock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_profile_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_profile_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginEnd="@dimen/padding_5"
                    android:src="@drawable/ic_alam_profile" />

                <TextView
                    android:id="@+id/label_profile_datestart"
                    style="@style/NanoBlack50Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/5/2019" />

                <TextView
                    android:id="@+id/label_profile_space"
                    style="@style/NanoBlack50Text"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:paddingStart="@dimen/margin_5"
                    android:paddingEnd="@dimen/margin_5"
                    android:text="-" />

                <TextView
                    android:id="@+id/label_profile_dateEnd"
                    style="@style/NanoBlack50Text"
                    android:text="3/5/2019" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_clock"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:layout_marginStart="0dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_profile_maker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:src="@drawable/ic_location_profile" />

                <TextView
                    android:id="@+id/label_profile_address"
                    style="@style/NanoBlack50Text"
                    android:layout_gravity="right"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_weight="13"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Số Thái Hà, Đống Đa, Hà Nội" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>