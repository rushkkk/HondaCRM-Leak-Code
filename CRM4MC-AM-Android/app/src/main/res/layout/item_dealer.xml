<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_item_dealer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/bg_item_dealer"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_dealer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/description_image"
                android:src="@drawable/ic_dealer_am" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_9"
                android:layout_toRightOf="@id/img_dealer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_dealer_name"
                    style="@style/Small3BlackText"
                    android:text="Mỹ Đình" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/rb_dealer"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="false"
                        android:max="5"
                        android:progressTint="@color/red"
                        android:rating="3" />

                    <TextView
                        style="@style/NanoBlackText"
                        android:layout_marginLeft="@dimen/margin_6"
                        android:text="12k" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_phone_dealer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/img_phone_dealer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:layout_marginEnd="@dimen/margin_6"
                    android:src="@drawable/ic_phone_dealer" />

                <TextView
                    android:id="@+id/txt_phone_dealer"
                    style="@style/MicroBlackText"
                    android:text="0965863489" />
            </LinearLayout>

    </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_7">

            <TextView
                style="@style/MicroBlack40Text"
                android:text="Địa chỉ: " />

            <TextView
                android:id="@+id/txt_dealer_address"
                style="@style/MicroBlack40Text"
                android:text="2 Lê Đức Thọ, Mai Dịch" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/MicroBlackText"
                android:text="Working time: " />

            <TextView
                android:id="@+id/txt_time_open"
                style="@style/MicroBlackText"
                android:text="08:00" />

            <TextView
                style="@style/MicroBlackText"
                android:text="-" />

            <TextView
                android:id="@+id/txt_time_close"
                style="@style/MicroBlackText"
                android:text="7:00" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_9">

            <TextView
                android:id="@+id/txt_distance"
                style="@style/Small14BlackText"
                android:layout_marginTop="@dimen/margin_6"
                android:text="1.2" />

            <TextView
                style="@style/Small14BlackText"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_toRightOf="@id/txt_distance"
                android:text="Km" />

            <TextView
                android:id="@+id/btn_book_a_service"
                style="@style/NanoWhiteText"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_btn_book_service"
                android:paddingHorizontal="@dimen/padding_8"
                android:paddingVertical="@dimen/padding_5"
                android:text="Book a service"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/view_border"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/colorBlack36" />
    </LinearLayout>
</LinearLayout>
