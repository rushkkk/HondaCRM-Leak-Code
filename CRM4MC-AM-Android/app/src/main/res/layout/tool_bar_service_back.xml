<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/description_image"
        android:padding="@dimen/padding_16"
        android:src="@drawable/ic_back_black" />

    <TextView
        android:id="@+id/tv_titleVehicle"
        style="@style/MediumBlackBoldText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_5"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Xế cưng (CRV 2019)" />

    <TextView
        android:id="@+id/tv_titleHistory"
        style="@style/SmallBlackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_titleVehicle"
        android:text="@string/tv_titleHistory" />


</RelativeLayout>