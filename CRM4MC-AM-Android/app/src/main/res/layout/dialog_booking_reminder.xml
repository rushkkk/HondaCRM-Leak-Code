<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_10"
    android:paddingEnd="@dimen/margin_10">

    <TextView
        style="@style/Small2BlackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_20"
        android:text="Booking Reminder"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_title_schedule"
        style="@style/SmallBlackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/bg_item_in_recall"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_10"
        android:text="You have a schedule with Honda Mỹ Đình" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/bg_item_in_recall"
        android:paddingBottom="@dimen/padding_10">

        <TextView
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_vehicle" />

        <TextView
            android:id="@+id/txt_vehicle_booking"
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Xế cưng (CRV 2019)" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/bg_item_in_recall"
        android:paddingBottom="@dimen/padding_10">

        <TextView
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_service" />

        <TextView
            android:id="@+id/txt_service"
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Sửa chữa thông thường" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/bg_item_in_recall"
        android:paddingBottom="@dimen/padding_10">

        <TextView
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_booking" />
        <TextView
            android:id="@+id/txt_time_booking"
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="2019/05/24 10:00 - 11:00" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/bg_item_in_recall"
        android:paddingBottom="@dimen/padding_10">

        <TextView
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_address_booking" />

        <TextView
            android:id="@+id/txt_address_booking"
            style="@style/SmallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="2 Lê Đức Thọ, Mai Dịch" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_15">

        <TextView
            android:id="@+id/btn_cancel_booking_reminder"
            style="@style/Micro2WhiteBoldText"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/padding_10"
            android:background="@drawable/button_gray"
            android:paddingBottom="@dimen/padding_5"
            android:paddingTop="@dimen/padding_5"
            android:gravity="center"
            android:paddingStart="@dimen/padding_40"
            android:paddingEnd="@dimen/padding_40"
            android:text="@string/btn_cancel"
            android:layout_marginEnd="@dimen/margin_10"/>

        <TextView
            android:id="@+id/btn_navigation_dealer"
            style="@style/Micro2WhiteBoldText"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/padding_10"
            android:background="@drawable/red_button"
            android:paddingBottom="@dimen/padding_5"
            android:paddingTop="@dimen/padding_5"
            android:paddingStart="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_10"
            android:text="@string/lb_navigation_to_dealer" />
    </LinearLayout>

</LinearLayout>