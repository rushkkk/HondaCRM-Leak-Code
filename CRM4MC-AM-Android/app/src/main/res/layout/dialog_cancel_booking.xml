<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border_dialog"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_24">

            <TextView
                android:id="@+id/tv_dialog_cancel"
                style="@style/SmallBlackBoldText"
                android:text="@string/dialog_cancel" />

            <TextView
                android:id="@+id/tv_dialog_question"
                style="@style/SmallBlackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@string/dialog_cancel_question" />

            <RadioGroup
                android:id="@+id/radioGroup_character"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15">

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorBlackGray"
                    android:text="@string/dialog_cancel_radio_1" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorBlackGray"
                    android:text="@string/dialog_cancel_radio_2" />

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorBlackGray"
                    android:text="@string/dialog_cancel_radio_3" />

                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorBlackGray"
                    android:checked="true"
                    android:text="@string/dialog_cancel_radio_4" />
            </RadioGroup>

            <EditText
                android:id="@+id/editVerifyNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/padding_20"
                android:background="@drawable/border_area_text"
                android:gravity="top"
                android:lines="3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_11"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding_40"
                android:paddingEnd="@dimen/padding_40"
                android:weightSum="2">

                <TextView
                    android:id="@+id/btn_no"
                    style="@style/MicroWhiteBoldText"
                    android:layout_width="0dp"
                    android:layout_marginEnd="@dimen/margin_11"
                    android:layout_weight="1"
                    android:background="@drawable/button_gray_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="@string/btn_no"
                    android:textAlignment="center"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/btn_yes"
                    style="@style/MicroWhiteBoldText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="@string/btn_yes"
                    android:textAlignment="center"
                    android:textAllCaps="true" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
