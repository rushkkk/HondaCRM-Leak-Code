<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_10"
    android:paddingEnd="@dimen/margin_10">

    <TextView
        android:id="@+id/txt_title_recall"
        style="@style/Small2BlackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_20"
        android:text="@string/maintenance_reminder"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_conten_recall"
        style="@style/SmallBlackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center"
/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_15"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_cancel_reminder"
            style="@style/Micro2WhiteBoldText"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginBottom="@dimen/padding_10"
            android:background="@drawable/button_gray"
            android:paddingVertical="@dimen/padding_5"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_20"
            android:text="@string/btn_cancel"  />

        <TextView
            android:id="@+id/btn_book_service_now"
            style="@style/Micro2WhiteBoldText"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/padding_10"
            android:background="@drawable/red_button"
            android:paddingVertical="@dimen/padding_5"
            android:paddingStart="@dimen/padding_15"
            android:paddingEnd="@dimen/padding_15"
            android:textAllCaps="true"
            android:visibility="gone"
            android:text="@string/lb_book_service_now" />
    </LinearLayout>
</LinearLayout>