<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_areatext"
    android:gravity="center"
    android:minHeight="320dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight=".5"
        android:background="@color/colorRedDark2"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_connected_test_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/ic_battery_voltage"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/tv_item_connected_test_title"
            style="@style/SmallWhiteText"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Engine temperature" />

        <TextView
            android:id="@+id/tv_item_connected_test_content"
            style="@style/XLargeWhiteText"
            android:layout_marginTop="4dp"
            android:text="70" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight=".5"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_connected_test_tutorial"
            style="@style/SmallBlackText"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="6"
            android:text="Engine temperature"
            />
    </LinearLayout>
</LinearLayout>