<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_intro_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:src="@drawable/img_motor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_intro_title"
                style="@style/XLarge2BlackText"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:paddingLeft="30dp"

                android:paddingRight="30dp"
                android:text="@string/intro_new_model_title" />

            <TextView
                android:id="@+id/tv_intro_content"
                style="@style/Small3BlackText"
                android:layout_marginTop="40dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="40dp"

                android:text="@string/intro_new_model_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>